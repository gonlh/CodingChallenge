
@{
    ViewBag.Title = "Titulos y Bonos";
}

<h2>Index</h2>
<div ng-controller="AutoCompleteCtrl as ctrl" layout="column" ng-cloak="" ng-app="AppTitulos">
    <div>
        <md-content class="md-padding">
            <form ng-submit="$event.preventDefault()">
                <md-autocomplete md-no-cache="false"
                                 md-selected-item="ctrl.selectedItem"
                                 md-search-text="ctrl.searchText"
                                 md-items="item in ctrl.querySearch(ctrl.searchText)"
                                 md-item-text="item.display"
                                 md-min-length="3"
                                 placeholder="Titulos y Bonos aqui!.">
                    <md-item-template>
                        <span md-highlight-text="ctrl.searchText" md-highlight-flags="^i">{{item.display}}</span>
                    </md-item-template>
                    <md-not-found>
                        No se ha encontrado: "{{ctrl.searchText}}".
                    </md-not-found>
                </md-autocomplete>
            </form>
        </md-content>
    </div>
    <div>
        <p>
            Descripción: {{ctrl.selectedItem.value.Detalle}}
        </p>
    </div>

</div>
<script src="~/Scripts/JS/angular.min.js"></script>
<script src="~/Scripts/JS/angular-route.min.js"></script>
<script src="~/Scripts/JS/angular-aria.min.js"></script>
<script src="~/Scripts/JS/angular-animate.min.js"></script>
<script src="~/Scripts/JS/angular-messages.min.js"></script>
<script src="~/Scripts/JS/angular-material.js"></script>
<script src="~/Scripts/JS/svg-assets-cache.js"></script>
<script src="~/Scripts/JS/angular-resource.js"></script>
<script src="~/Scripts/AngularApp/app.js"></script>
<script src="~/Scripts/Factorys/factoryTitulos.js"></script>
<script src="~/Scripts/Controllers/Home.js"></script>